{
  "title": "API Metrics",
  "panels": [
    {
      "title": "HTTP Requests",
      "type": "stat",
      "targets": [{"expr": "rate(http_requests_total[5m])"}]
    },
    {
      "title": "Error Rate", 
      "type": "stat",
      "targets": [{"expr": "rate(http_requests_total{status=~'5..'}[5m])"}]
    },
    {
      "title": "Response Time",
      "type": "graph",
      "targets": [{"expr": "rate(http_request_duration_seconds_sum[5m]) / rate(http_request_duration_seconds_count[5m])"}]
    }
  ]
}
